{
  "name": "unthink-stack",
  "version": "0.1.0",
  "description": "A TypeScript full-stack solution",
  "main": "lib/server/server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "echo \"Server and client must now be run separately via 'npm run server' and 'npm run client'\" && exit 1",
    "server": "npm run build-server && npm run build-content && node ./lib/server/server.js | pino-pretty --ignore req,res,responseTime,unthinkHandlerError,err --messageFormat=\"{msg} {unthinkHandlerError}\"",
    "client": "node ./scripts/dev.js",
    "watch-entries": "webpack-dev-server --config ./scripts/webpack.dev.js",
    "watch-server": "./node_modules/.bin/tsc -w --project ./src/server/tsconfig.json",
    "watch-content": "./node_modules/.bin/onchange -i \"src/content/**/*\" -- npm run build-content",
    "watch-public": "./node_modules/.bin/onchange -i \"src/client/public/**/*\" -- npm run build-public",
    "watch-sass": "./node_modules/.bin/sass --watch src/client/sass:public/css",
    "lint": "npm run lint-server && npm run lint-client && npm run lint-sass",
    "lint-server": "./node_modules/.bin/eslint \"src/server/**/*.{js,ts}\" --quiet --fix",
    "lint-client": "./node_modules/.bin/eslint \"src/client/**/*.{js,ts}\" --quiet --fix",
    "lint-sass": "./node_modules/.bin/stylelint \"src/client/sass/**/*.scss\" \"src/client/**/*.riot\" --fix --config \"src/client/.stylelintrc\"",
    "lint-server-fail": "./node_modules/.bin/eslint \"src/server/**/*.{js,ts}\" --quiet",
    "lint-client-fail": "./node_modules/.bin/eslint \"src/client/**/*.{js,ts}\" --quiet",
    "lint-sass-fail": "./node_modules/.bin/stylelint \"src/client/sass/**/*.scss\" \"src/client/**/*.riot\" --config \"src/client/.stylelintrc\"",
    "clean-build": "./node_modules/.bin/shx rm -rf ./lib ./public && shx mkdir -p \"public\"",
    "build": "npm run clean-build && npm run build-server && npm run build-content && npm run build-public",
    "build-server": "./node_modules/.bin/tsc --project ./src/server/tsconfig.json",
    "build-client": "./node_modules/.bin/webpack --config ./scripts/webpack.prod.js",
    "build-content": "./node_modules/.bin/shx cp -R ./src/content ./lib/",
    "build-sass": "./node_modules/.bin/sass src/client/sass/main.scss public/css/main.css --style=compressed",
    "build-public": "./node_modules/.bin/shx cp -R ./src/client/public/. ./public"
  },
  "keywords": [
    "typescript",
    "riot",
    "webpack",
    "express"
  ],
  "author": "EP+Co",
  "license": "MIT",
  "homepage": "https://github.com/epandco/unthink-stack#readme",
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@epandco/riot-typescript-preprocessor": "^1.2.1",
    "@riotjs/compiler": "^4.11.0",
    "@riotjs/hot-reload": "^4.0.1",
    "@riotjs/webpack-loader": "^4.0.3",
    "@types/cookie-parser": "^1.4.2",
    "@types/dotenv": "^8.2.0",
    "@types/eslint": "^7.2.3",
    "@types/express": "^4.17.8",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongodb": "^3.5.27",
    "@types/node": "^12.12.62",
    "@types/nunjucks": "^3.1.3",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "@webcomponents/template": "^1.4.3",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "concurrently": "^5.3.0",
    "core-js": "^3.6.5",
    "eslint": "^7.10.0",
    "http-proxy": "^1.18.1",
    "onchange": "^7.0.2",
    "pino-pretty": "^4.2.1",
    "pre-commit": "^1.2.2",
    "regenerator-runtime": "^0.13.7",
    "riot": "^4.14.0",
    "sass": "^1.26.11",
    "shx": "^0.3.2",
    "strip-indent": "^3.0.0",
    "stylelint": "^13.7.2",
    "ts-loader": "^8.0.4",
    "typescript": "^4.0.3",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-hot-middleware": "^2.25.0",
    "webpack-merge": "^5.1.4",
    "whatwg-fetch": "^3.4.1"
  },
  "dependencies": {
    "@epandco/unthink-foundation": "^2.1.0",
    "@epandco/unthink-foundation-express": "^2.0.1",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongodb": "^3.6.2",
    "nunjucks": "^3.2.2"
  },
  "pre-commit": {
    "run": [
      "lint-server-fail",
      "lint-client-fail",
      "lint-sass-fail"
    ],
    "silent": true
  },
  "unthink": {
    "version": "3.0.7"
  }
}
